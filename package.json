{
  "name": "wordpress-automation-app",
  "version": "1.0.0",
  "description": "Application d'automatisation WordPress - Copie, Configuration et Base de donn√©es",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && node scripts/post-build.js",
    "watch": "tsc --watch",
    "postinstall": "npm run build",
    "start": "npm run build && npx electron .",
    "dev": "npm run build && npx electron . --dev",
    "build:win": "npm run build && npx electron-builder --win",
    "build:mac": "npm run build && npx electron-builder --mac",
    "build:linux": "npm run build && npx electron-builder --linux",
    "build:all": "npm run build && npx electron-builder -mwl",
    "clean": "rm -rf dist"
  },
  "build": {
    "appId": "com.wordpress.automation",
    "productName": "WordPress Automation",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/logo.png",
      "category": "Development"
    }
  },
  "keywords": [
    "wordpress",
    "automation",
    "electron",
    "mysql",
    "typescript"
  ],
  "author": "Eraste <keraste38@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "mysql2": "^3.6.5",
    "uuid": "^9.0.1"
  }
}
